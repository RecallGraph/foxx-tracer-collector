{
  "$schema": "http://json.schemastore.org/foxx-manifest",
  "name": "foxx-tracer-collector",
  "version": "0.0.1",
  "description": "A collector service for foxx-tracer",
  "keywords": [
    "opentracing",
    "distributed-tracing",
    "apm"
  ],
  "engines": {
    "arangodb": ">=3.5.0"
  },
  "provides": {
    "@RecallGraph/foxx-tracer-collector": "0.0.1"
  },
  "author": "Aditya Mukhopadhyay",
  "license": "MIT",
  "main": "main.js",
  "scripts": {
    "setup": "scripts/setup.js",
    "teardown": "scripts/teardown.js",
    "reportTraces": "scripts/reportTraces.js"
  },
  "configuration": {
    "reporters": {
      "description": "The reporter implementation(s) to use (console|datadog). Use comma-separated list for multiple.",
      "default": "console",
      "type": "string",
      "required": false
    },
    "dd-agent-url":  {
      "description": "The Datadog agent URL where to publish finished spans (used by the datadog reporter).",
      "default": "http://localhost:8126/v0.4/traces",
      "type": "string",
      "required": false
    },
    "reported-span-ttl":  {
      "description": "The TTL (in seconds) for reported spans. A value < 300 is ignored and a TTL of 300 is used instead.",
      "default": 3600,
      "type": "number",
      "required": true
    }
  }
}